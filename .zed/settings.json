// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "formatter": [{ "external": { "command": "dprint", "arguments": ["fmt", "--stdin", "{buffer_path}"] } }],
  "prettier": { "allowed": false },
  "languages": { "YAML": { "wrap_guides": [155] } },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        // get more cargo-less diagnostics from rust-analyzer,
        // which might include false-positives (those can be turned off by their names)
        "diagnostics": {
          "experimental": {
            "enable": true
          }
        },
        "cargo": {
          "allTargets": true,
          "features": "all"
        },
        "check": {
          "workspace": true
        }
      }
    },
    "json-language-server": {
      "settings": {
        "json": {
          "schemas": [
            {
              "fileMatch": [".markdownlint.json"],
              "url": "https://raw.githubusercontent.com/DavidAnson/markdownlint/refs/heads/main/schema/markdownlint-config-schema.json"
            }
          ]
        }
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemas": {
            "https://www.schemastore.org/dependabot-2.0.json": [
              ".github/dependabot.yml"
            ],
            "https://www.schemastore.org/github-workflow.json": [
              ".github/workflows/*.yml",
              ".github/workflows/*.yaml"
            ],
            "https://www.schemastore.org/github-action.json": [
              ".github/**/action.yml",
              ".github/**/action.yaml"
            ]
          }
        }
      }
    }
  }
}
